# Production Environment Configuration for Century Property Tax Documentation Portal
# Copy this file to .env.production and update with your actual values

# Application Configuration
ENVIRONMENT=production
BASE_URL=https://docs.centuryproptax.com
DOCS_BASE_URL=https://docs.centuryproptax.com
CDN_URL=https://cdn.centuryproptax.com

# Database Configuration
DATABASE_URL=postgresql://centuryproptax:your_db_password@db:5432/centuryproptax
POSTGRES_DB=centuryproptax
POSTGRES_USER=centuryproptax
POSTGRES_PASSWORD=your_secure_db_password

# Redis Configuration
REDIS_URL=redis://:your_redis_password@redis:6379/0
REDIS_PASSWORD=your_secure_redis_password

# WhatsApp Business API Configuration
WA_ACCESS_TOKEN=your_whatsapp_access_token
WA_PHONE_NUMBER_ID=your_phone_number_id
WA_VERIFY_TOKEN=your_webhook_verify_token

# Payment Configuration (Razorpay)
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# SSL Certificate Configuration
ACME_EMAIL=admin@centuryproptax.com

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters
WEBHOOK_SECRET=your_webhook_signature_secret

# Performance Configuration
WORKER_COUNT=4
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=centuryproptax-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# CDN Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'